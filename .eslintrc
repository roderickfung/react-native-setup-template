{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "rules": {
    "react/jsx-filename-extension": [1, {"extensions": [".js", ".jsx"]}],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 100
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": true,
        "variables": false
      }
    ],
    "import/prefer-default-export": ["error", false],
    "react/jsx-props-no-spreading": [
      {
        "html": "ignore",
        "custom": "enforce"
      }
    ],
    "no-mixed-spaces-and-tabs": "error"
  },
  "plugins": ["prettier"]
}
